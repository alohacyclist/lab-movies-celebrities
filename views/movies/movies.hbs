<h2>Movies</h2>
<ul>
    {{#each movies}}
        <li>
            <a href="/movies/{{this.id}}">{{this.title}}</a>
        </li>
    {{/each}}
</ul>
{{#if userSessionActive}}
<a href="/movies/create">Add movie</a>
{{else}}
<p><a href="/login">Login</a> to add and edit movies.</p>
{{/if}}
<a href="/">Go back</a>